{
  "name": "@ureq/monorepo",
  "version": "0.0.1-alpha.3",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "clean": "pnpm -r exec rimraf dist",
    "build": "pnpm clean && pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,md,json}\"",
    "changeset": "bumpp package.json packages/*/package.json --all",
    "version-packages": "bumpp package.json packages/*/package.json --all",
    "release": "pnpm build && pnpm publish -r",
    "release:alpha": "pnpm clean && pnpm build && node scripts/check-dist.js && bumpp package.json packages/*/package.json --all --preid alpha --prerelease && pnpm publish -r --tag alpha",
    "docs:dev": "pnpm --filter @ureqdocs dev",
    "docs:build": "pnpm --filter @ureqdocs build",
    "docs:preview": "pnpm --filter @ureqdocs preview",
    "check-dist": "node scripts/check-dist.js",
    "enter:alpha": null,
    "exit:alpha": null
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "bumpp": "^9.3.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitepress": "^1.0.0",
    "vitest": "^1.0.0"
  }
}