{
  "name": "@ureq/monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "clean": "pnpm -r exec rimraf dist",
    "build": "pnpm clean && pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,md,json}\"",
    "docs:dev": "pnpm --filter @ureqdocs dev",
    "docs:build": "pnpm --filter @ureqdocs build",
    "docs:preview": "pnpm --filter @ureqdocs preview",
    "playground": "pnpm --filter @ureq/playground dev",
    "playground:demo": "pnpm --filter @ureq/playground demo:all"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "bumpp": "^9.3.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitepress": "^1.0.0",
    "vitest": "^1.0.0"
  }
}